{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    },
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
